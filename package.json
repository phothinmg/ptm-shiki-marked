{
  "name": "ptm-shiki-marked",
  "version": "0.1.1",
  "description": "A marked extension for Shiki.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./shiki-css": "./styles/shiki.css",
    "./twoslash-css": "./styles/twoslash.css",
    "./diff-css": "./styles/diff.css",
    "./error-level-css": "./styles/error-level.css",
    "./focus-css": "./styles/focus.css",
    "./highlight-css": "./styles/highlight.css",
    "./highlighted-word-css": "./styles/highlighted-word.css",
    "./lines-number-css": "./styles/lines-number.css",
    "./container-css": "./styles/container.css"
  },
  "files": [
    "styles/",
    "dist/"
  ],
  "scripts": {
    "build": "tsc --build --clean && tsc --build"
  },
  "keywords": [
    "marked",
    "marked extension",
    "shiki",
    "shiki-twoslash"
  ],
  "author": "Pho Thin Mg",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "marked": "^15.0.7",
    "shiki": "^3.2.1",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phothinmg/ptm-shiki-marked.git"
  },
  "bugs": {
    "url": "https://github.com/phothinmg/ptm-shiki-marked/actions"
  }
}
